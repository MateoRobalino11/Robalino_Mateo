<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_dos"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_titulo_nombre_activity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombres: " />

        <EditText
            android:id="@+id/editText_nombre_activity_dos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:editable="false"
            android:inputType="textPersonName"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="25px">

        <TextView
            android:id="@+id/textView_titulo_base_activity2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Base" />

        <EditText
            android:id="@+id/editText_base_activity_dos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:editable="false"
            android:inputType="textPersonName"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>

    <Button
        android:id="@+id/button_siguiente_activity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="45px"
        android:onClick="AbrirActivity3"
        android:text="Siguiente" />

    <Button
        android:id="@+id/button_cerrar_Activity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="45px"
        android:onClick="CerrarActivity2"
        android:text="Cerrar" />

</LinearLayout>